---
import BaseLayout from '../layouts/BaseLayout.astro';
import Globe from '../components/Globe';
---

<BaseLayout title="Travel - Bradley Spillert">
  <section class="pt-32 pb-20 px-6">
    <div class="max-w-6xl mx-auto">
      <h1 class="section-heading fade-in">Where I've Been</h1>
      <p class="text-gray-400 mb-12 max-w-2xl fade-in">
        Drag to spin, scroll to zoom. Click a marker for details. More pins and photos coming as I dig through my camera roll.
      </p>
      
      <div class="fade-in rounded-xl border border-gray-800 overflow-hidden bg-surface-raised">
        <Globe client:only="react" />
      </div>

      <div class="mt-12 grid md:grid-cols-3 gap-6 fade-in">
        <div class="card">
          <div class="placeholder-image h-40">
            <span>Santiago photos coming soon</span>
          </div>
          <div class="p-4">
            <h3 class="text-white font-medium">Santiago, Chile</h3>
          </div>
        </div>
        <div class="card">
          <div class="placeholder-image h-40">
            <span>Guatemala photos coming soon</span>
          </div>
          <div class="p-4">
            <h3 class="text-white font-medium">Antigua, Guatemala</h3>
          </div>
        </div>
        <div class="card">
          <div class="placeholder-image h-40">
            <span>London photos coming soon</span>
          </div>
          <div class="p-4">
            <h3 class="text-white font-medium">London, England</h3>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
