---
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = [
  {
    title: 'flight-software',
    description: 'Open source ground control station for ArduPilot drones. A modern, web-based GCS built with React, TypeScript, and CesiumJS. Packaged with Electron for desktop use.',
    tags: ['React', 'TypeScript', 'CesiumJS', 'Electron', 'ArduPilot'],
    link: 'https://github.com/spillertb/flight-software',
  },
  {
    title: 'Autonomous Quadcopter',
    description: '7-inch quad running ArduPilot with ELRS radio. Flies fully autonomous waypoint missions — 5+ miles, no manual input. Built the airframe, tuned the PIDs, set up the telemetry link.',
    tags: ['ArduPilot', 'ELRS', 'FPV', 'Autonomous Flight'],
  },
  {
    title: 'MAVLink over ELRS',
    description: 'Technical writeup on running MAVLink telemetry over ExpressLRS. How to get reliable bidirectional telemetry on an RC link that was never really designed for it.',
    tags: ['MAVLink', 'ExpressLRS', 'Telemetry', 'Technical Writing'],
  },
  {
    title: 'CoreXY 3D Printer',
    description: 'Custom FDM 3D printer built from scratch. Designed the frame and motion system in Fusion 360, runs Marlin firmware. Prints PLA, PETG, and TPU.',
    tags: ['Fusion 360', 'Marlin', '3D Printing', 'Mechanical Design'],
  },
  {
    title: 'Gyro Glove',
    description: 'Senior capstone project — a wearable gesture controller for RC aircraft. Tilt your hand, fly the plane. Custom PCBs with IMU, radio transceiver, and a whole lot of signal processing.',
    tags: ['PCB Design', 'IMU', 'Embedded C', 'Wireless'],
  },
  {
    title: 'HackUMass VIII — Best Hardware Hack',
    description: 'Won Best Hardware Hack at HackUMass VIII with a 2-motor polar plotter. Draws anything you throw at it using polar coordinates and a couple of steppers.',
    tags: ['Hackathon', 'Stepper Motors', 'Arduino', 'Mechanical Design'],
  },
];
---

<BaseLayout title="Projects - Bradley Spillert">
  <section class="pt-32 pb-20 px-6">
    <div class="max-w-6xl mx-auto">
      <h1 class="section-heading fade-in">Projects</h1>
      <p class="text-gray-400 mb-12 max-w-2xl fade-in">
        A mix of things I've built for fun, for learning, and because I wanted them to exist. Images and videos coming soon for most of these.
      </p>

      <div class="grid md:grid-cols-2 gap-6">
        {projects.map((project) => (
          <div class="fade-in group bg-surface-raised border border-gray-800 rounded-xl overflow-hidden hover:border-gray-700 transition-all">
            <!-- Image placeholder -->
            <div class="placeholder-image h-48">
              <span>Image coming soon</span>
            </div>
            
            <div class="p-6">
              <div class="flex items-start justify-between gap-4">
                <h3 class="text-white text-lg font-semibold group-hover:text-accent transition-colors">
                  {project.link ? (
                    <a href={project.link} target="_blank" rel="noopener">{project.title}</a>
                  ) : (
                    project.title
                  )}
                </h3>
                {project.link && (
                  <a href={project.link} target="_blank" rel="noopener" class="text-gray-500 hover:text-accent transition-colors shrink-0">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                )}
              </div>
              <p class="text-gray-400 text-sm leading-relaxed mt-3">{project.description}</p>
              <div class="flex flex-wrap gap-2 mt-4">
                {project.tags.map((tag) => (
                  <span class="px-2.5 py-1 bg-surface border border-gray-800 rounded text-xs text-gray-500">{tag}</span>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
