---
import BaseLayout from '../layouts/BaseLayout.astro';

const activities = [
  {
    title: 'Running',
    description: 'Training for a half marathon with my girlfriend. We run around Somerville and the Charles River. Still working on getting faster, but at least I show up.',
    link: '#', // Strava link goes here
    linkText: 'Strava (coming soon)',
  },
  {
    title: 'Skiing',
    description: 'Ikon Pass holder. Waterville Valley, Loon, Mount Snow, and wherever the snow is best that weekend. Went out to Brighton Resort in Utah last season.',
  },
  {
    title: 'Scuba Diving',
    description: 'Advanced NAUI certified. There is something about being 80 feet underwater that completely resets your brain.',
  },
  {
    title: 'Dodgeball',
    description: 'Volo Sports league in the city. It is exactly as fun and chaotic as it sounds.',
  },
  {
    title: 'Go-Kart Racing',
    description: 'K1 Speed adult league. The fastest way to feel like a Formula 1 driver without any of the talent or money.',
  },
  {
    title: 'Hiking and Camping',
    description: 'Acadia is the go-to. Northeast trails mostly, with the occasional trip out west. AllTrails and Gaia GPS on every hike.',
  },
];

const hobbies = [
  '3D printing (built my own CoreXY)',
  'Electronics and PCB design',
  'Knife collecting',
  'Quilting and sewing',
  'Music â€” Caamp, Mt. Joy, Rainbow Kitten Surprise, Band of Horses',
];
---

<BaseLayout title="Adventures - Bradley Spillert">
  <section class="pt-32 pb-20 px-6">
    <div class="max-w-6xl mx-auto">
      <h1 class="section-heading fade-in">Beyond the Desk</h1>
      <p class="text-gray-400 mb-12 max-w-2xl fade-in">
        Engineering is the day job. The rest of the time I'm usually outside, underwater, or building something that has nothing to do with software.
      </p>

      <div class="grid md:grid-cols-2 gap-6 mb-20">
        {activities.map((activity) => (
          <div class="fade-in bg-surface-raised border border-gray-800 rounded-xl overflow-hidden">
            <div class="placeholder-image h-44">
              <span>Photo coming soon</span>
            </div>
            <div class="p-6">
              <h3 class="text-white text-lg font-semibold mb-2">{activity.title}</h3>
              <p class="text-gray-400 text-sm leading-relaxed">{activity.description}</p>
              {activity.link && (
                <a href={activity.link} class="inline-block mt-3 text-accent text-xs hover:underline">{activity.linkText}</a>
              )}
            </div>
          </div>
        ))}
      </div>

      <!-- Other hobbies -->
      <div class="fade-in">
        <h2 class="text-2xl font-semibold text-white mb-8">Other Things I Do</h2>
        <div class="flex flex-wrap gap-3">
          {hobbies.map((hobby) => (
            <span class="px-4 py-2 bg-surface-raised border border-gray-800 rounded-lg text-sm text-gray-400">
              {hobby}
            </span>
          ))}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
